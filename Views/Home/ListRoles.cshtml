@model List<Scheduling.Models.Role>
@{
    ViewBag.Title = "List Roles";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}


@{ if (Model.Count==0)
   {
       <p>There are no results</p>
    }
}

<div class='container'>
    <div class='sixteen columns'>
        @{
            if (Model.Count > 0)
            {
                  
                 @Html.Partial("_TableHeaderPartial", ViewData["header"] = "Roles")
                
            <table class='condensed zebra-striped'>
                <thead>
                    <tr>
                        <th>
                           Role
                        </th>
                        <th>Description</th>
                                               
                    </tr>
                </thead>
                <tbody>
                    @{  foreach (Scheduling.Models.Role r in Model)
                        { 
           
                        <tr>
                            <td>@r.ShortDesc
                            </td>

                            <td>@r.LongDesc
                            </td>
                            
                           
                        </tr>
      
         
                        }
     
                    }
                </tbody>
            </table> 
 
        

            }


        }
    </div>
</div>
