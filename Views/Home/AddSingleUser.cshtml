@{
    ViewBag.Title = "Add Single User";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}
<h2>
    Add Single User</h2>
<div class='add-single-user'>
   
   @Html.ValidationSummary()
   
    @{ Html.BeginForm("ProcessAddSingleUser", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "AddSingleUser" }); }
    <p>
        UserName</p>
        @Html.TextBox("UserName")
    <p>
        Email</p>
    <input type='text' value='' name='email' id='email' />
    <p>
        Role</p>
    @{
        <select name='RoleFK' id='RoleFK'>
            @{
           
                foreach (var r in ViewBag.Roles)
                {
                <option  value='@r.ID'>@r.ShortDesc</option>
                }
           
            }
        </select>
       
    }
    <div class='add-single-submit-container'>
        <input type="submit" value='Add User' />
    </div>
    @{ Html.EndForm(); }
</div>
