@model List<Scheduling.Models.Log>
@{
    ViewBag.Title = "List Application Log";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}
@{ if (Model.Count == 0)
   {
    <p>
        There are no current entries in the application log<br/>
        Please check the <a  style='color:#333;font-weight:bold;text-decoration:none' href='/logging/ShowApplicationErrorLog'>Application Log</a> for application errors</p>
   }
}
<div class='container'>
    <div class='sixteen columns'>
        @{
            if (Model.Count > 0)
            {
                  
            @Html.Partial("_TableHeaderPartial", ViewData["header"] = "Application Log")
                
            <table class='condensed zebra-striped' id='results'>
                <thead>
                    <tr>
                        <th>
                            Message
                        </th>
                        <th>
                            Date Created
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{  foreach (Scheduling.Models.Log log in Model)
                        { 
           
                        <tr>
                            <td>@log.Message
                            </td>
                            <td>@log.DateModified
                            </td>
                        </tr>
      
         
                        }
     
                    }
                </tbody>
            </table> 
 
        

            }


        }
    </div>
    <div id="pageNavPosition">
    </div>
    <script type="text/javascript"><!--
        var pager = new Pager('results', 10);
        pager.init();
        pager.showPageNav('pager', 'pageNavPosition');
        pager.showPage(1);
    </script>
</div>
